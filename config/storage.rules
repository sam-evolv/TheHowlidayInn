rules_version = '2';

// Firebase Storage security rules for The Howliday Inn dog kennel system
service firebase.storage {
  match /b/{bucket}/o {
    
    // User-scoped file reads (writes handled by specific paths only)
    match /users/{userId}/{allPaths=**} {
      // Users can read their own files
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admins can read/write all user files
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Dog photos - organized under user directories
    match /users/{userId}/dogs/{dogId}/photos/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.admin == true
      );
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        // Validate file size and type
        resource == null && // Only allow creates, not overwrites
        request.resource.size <= 5 * 1024 * 1024 && // 5MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // Vaccination documents - organized by type
    match /users/{userId}/dogs/{dogId}/vaccinations/{vaccinationType}/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.admin == true
      );
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        // Validate file size and type
        resource == null && // Only allow creates, not overwrites
        request.resource.size <= 10 * 1024 * 1024 && // 10MB limit
        (request.resource.contentType.matches('image/.*') || 
         request.resource.contentType == 'application/pdf');
    }
    
    // Health documents - organized by document type
    match /users/{userId}/dogs/{dogId}/health/{documentType}/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.admin == true
      );
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        // Validate file size and type
        resource == null && // Only allow creates, not overwrites
        request.resource.size <= 10 * 1024 * 1024 && // 10MB limit
        (request.resource.contentType.matches('image/.*') || 
         request.resource.contentType == 'application/pdf');
    }
    
    // Legacy dog photos (from old structure) - admin-only access for migration
    match /dog-photos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
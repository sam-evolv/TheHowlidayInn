rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }
    function isOwner(uid) { return isAuthenticated() && request.auth.uid == uid; }

    // Users collection
    match /users/{uid} {
      allow read, write: if isOwner(uid);

      // User bookings subcollection
      match /bookings/{bookingId} {
        allow read, create, update, delete: if isOwner(uid);
      }
    }

    // Top-level dogs collection
    match /dogs/{dogId} {
      allow create: if isAuthenticated()
        && request.resource.data.ownerUid == request.auth.uid;
      allow read, update, delete: if isAuthenticated()
        && resource.data.ownerUid == request.auth.uid;
    }

    // Top-level bookings collection
    match /bookings/{bookingId} {
      allow create: if isAuthenticated()
        && request.resource.data.ownerUid == request.auth.uid;
      allow read, update: if isAuthenticated()
        && resource.data.ownerUid == request.auth.uid;
    }

    // Top-level vaccinations collection
    match /vaccinations/{vaccinationId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // Top-level health profiles collection
    match /health_profiles/{profileId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // Settings collection (read-only for authenticated users)
    match /settings/{documentId} {
      allow read: if isAuthenticated();
    }
  }
}
